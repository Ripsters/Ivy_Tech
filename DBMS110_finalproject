DROP TABLE LOCATION CASCADE CONSTRAINTS;
DROP TABLE EMPLOYEE CASCADE CONSTRAINTS;
DROP TABLE BUYER CASCADE CONSTRAINTS;
DROP TABLE CONTRACTOR CASCADE CONSTRAINTS;
DROP TABLE SALES_AGENT CASCADE CONSTRAINTS;
DROP TABLE PROPERTY CASCADE CONSTRAINTS;
DROP TABLE CONTRACTOR_AGREEMENT CASCADE CONSTRAINTS;
DROP TABLE SALES_AGREEMENT CASCADE CONSTRAINTS;

--TABLE CREATION:

create table LOCATION (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    address varchar2 (4000),
    city varchar2 (4000),
    state varchar2 (4000),
    zip varchar2 (4000),
    country varchar2 (4000)
);

create table EMPLOYEE (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    title varchar2 (4000),
    first_name varchar2 (4000),
    last_name varchar2 (4000),
    location_ID number,
    phone varchar2 (4000),
    FOREIGN KEY (location_ID) references location(ID) on delete cascade
);

create table BUYER (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    account_number as (ID*1),       --I prefer to use 'attribute_ID' as PK, so this line allows 'account_number' to be used in queries in addition to 'buyer_ID'
    first_name varchar2 (4000),
    last_name varchar2 (4000),
    location_ID number,
    phone varchar2 (4000),
    occupation varchar2 (4000),
    salary number,
    credit_score number (3),
    FOREIGN KEY (location_ID) references location(ID) on delete cascade
);

create table CONTRACTOR (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    title varchar2 (4000),
    first_name varchar2 (4000),
    last_name varchar2 (4000),
    location_ID number,
    phone varchar2 (4000),
    FOREIGN KEY (location_ID) references location(ID) on delete cascade
);

create table SALES_AGENT (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    first_name varchar2 (4000),
    last_name varchar2 (4000),
    location_ID number,
    phone varchar2 (4000),
    FOREIGN KEY (location_ID) references location(ID) on delete cascade
);

create table PROPERTY (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    parcel_number varchar2 (4000),
    location_ID number,
    number_of_rooms number,
    square_feet number,
    market_value number,
    arch_style varchar2 (4000),
    FOREIGN KEY (location_ID) references location(ID) on delete cascade
);

create table CONTRACTOR_AGREEMENT (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    contractor_ID number,
    property_ID number,
    agreement_description varchar2 (4000),
    FOREIGN KEY (contractor_ID) references contractor(ID) on delete cascade,
    FOREIGN KEY (property_ID) references property(ID) on delete cascade
);

create table SALES_AGREEMENT (
    ID number GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    sales_agent_ID number,
    buyer_ID number,
    property_ID number,
    purchase_date date,
    purchase_amount number,
    FOREIGN KEY (sales_agent_ID) references sales_agent(ID) on delete cascade,
    FOREIGN KEY (buyer_ID) references buyer(ID) on delete cascade,
    FOREIGN KEY (property_ID) references property(ID) on delete cascade
);

